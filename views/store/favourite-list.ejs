<%- include('../partials/head') %>
</head>
    
<body class="bg-gradient-to-br from-gray-50 via-white to-slate-50 text-[#222] leading-relaxed min-h-screen">
  <!-- Header -->
  <%- include('../partials/headerNav') %>

  <!-- Hero -->
  <main class="text-center py-16 px-6 bg-gradient-to-br from-[#ff7a7a] via-[#ff385c] to-rose-600 text-white rounded-b-3xl shadow-2xl relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute inset-0">
      <div class="absolute top-8 left-10 w-24 h-24 bg-white bg-opacity-10 rounded-full blur-xl animate-pulse"></div>
      <div class="absolute bottom-8 right-10 w-32 h-32 bg-white bg-opacity-5 rounded-full blur-2xl"></div>
      <div class="absolute top-1/2 left-1/3 transform -translate-x-1/2 -translate-y-1/2 w-20 h-20 bg-white bg-opacity-5 rounded-full blur-lg"></div>
    </div>
    
    <div class="relative z-10">
      <!-- Heart icon with animation -->
      <div class="inline-flex items-center justify-center w-20 h-20 bg-white bg-opacity-20 backdrop-blur-sm rounded-full mb-6 animate-bounce">
        <svg class="w-10 h-10 text-red-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
      </div>
      
      <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-2xl tracking-tight">My Favourites</h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto font-light">Your personally curated collection of amazing stays</p>
      
    </div>
  </main>

<!-- Homes Grid Section -->
<section class="mt-20 px-6 md:px-12 max-w-7xl mx-auto">
  <% if ((favouriteHomes || []).length > 0) { %>
    <div class="mb-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 tracking-tight">
        <%= (favouriteHomes || []).length %> Favourite<%= (favouriteHomes || []).length !== 1 ? 's' : '' %>
      </h2>
      <div class="w-16 h-1 bg-gradient-to-r from-red-400 to-pink-500 rounded-full mx-auto"></div>
    </div>

    <!-- Grid container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% (favouriteHomes || []).forEach(home => { %>
        <div class="group bg-white rounded-3xl shadow-lg overflow-hidden 
                    transition-all duration-500 ease-out hover:shadow-2xl hover:shadow-rose-500 hover:shadow-opacity-10
                    border border-gray-100 hover:border-rose-200 relative transform hover:-translate-y-3 hover:scale-105">

          <!-- Cover Image (First photo) -->
          <div class="relative overflow-hidden rounded-t-3xl">
            <% if (home.photos && home.photos.length) { %>
              <img src="/uploads/<%= Array.isArray(home.photos) ? home.photos[0] : home.photos %>" 
                   alt="Home Cover" 
                   class="w-full h-56 object-cover transition-transform duration-700 ease-out group-hover:scale-110" />
            <% } else { %>
              <!-- fallback placeholder -->
              <div class="w-full h-56 bg-gradient-to-br from-gray-200 via-gray-300 to-gray-400 flex flex-col items-center justify-center text-gray-500 relative">
                <svg class="w-12 h-12 mb-2 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm font-medium">No Image</span>
              </div>
            <% } %>
            
            <!-- Favourite heart badge -->
            <div class="absolute top-4 left-4 bg-white bg-opacity-95 backdrop-blur-sm px-2 py-1 rounded-full shadow-lg border border-white border-opacity-50">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
            
            <!-- Rating badge -->
            <div class="absolute top-4 right-4 bg-white bg-opacity-95 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg border border-white border-opacity-50">
              <div class="flex items-center gap-1">
                <span class="text-sm font-bold text-gray-800"><%= home.rating %></span>
                <span class="text-yellow-500">⭐</span>
              </div>
            </div>
          </div>

          <!-- Card Content -->
          <div class="p-6 space-y-4">
            <h3 class="font-semibold text-gray-900 text-lg mb-1 truncate group-hover:text-rose-600 transition-colors duration-300"><%= home.houseName %></h3>
            
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-gray-600 bg-gray-50 p-2 rounded-lg">
                <svg class="w-4 h-4 flex-shrink-0 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <p class="text-sm truncate font-medium"><%= home.homeLocation %></p>
              </div>
              
              <div class="flex items-center gap-2 text-gray-500 bg-blue-50 p-2 rounded-lg">
                <svg class="w-4 h-4 flex-shrink-0 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <p class="text-sm truncate font-medium"><%= home.contactInfo %></p>
              </div>
            </div>

            <!-- Price highlight -->
            <div class="bg-gradient-to-r from-emerald-50 via-green-50 to-emerald-50 p-4 rounded-xl border border-emerald-100 shadow-sm">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 font-medium">Price per night:</span>
                <div class="text-right">
                  <span class="text-xl font-bold text-emerald-600">₹<%= home.pricePerNight %></span>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 flex flex-col gap-3">
              <!-- Book Now Button -->
              <a href="#" class="
                group inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full font-semibold shadow-lg 
                transition-all duration-300 w-full
                bg-gradient-to-r from-[#ff385c] to-rose-600 text-white 
                hover:from-rose-600 hover:to-red-600 hover:shadow-xl hover:shadow-rose-500 hover:shadow-opacity-25
                transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-rose-300 focus:ring-opacity-50">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>Book Now</span>
              </a>
              
              <!-- Remove Button -->
              <form action="/remove-home/<%= home._id %>" method="POST" class="w-full">
                <button type="submit" class="
                  group inline-flex items-center justify-center gap-2 px-5 py-3 rounded-full font-semibold shadow-lg 
                  transition-all duration-300 w-full
                  bg-gradient-to-r from-blue-600 to-blue-700 text-white 
                  hover:from-red-600 hover:to-red-700 hover:shadow-xl hover:shadow-red-500 hover:shadow-opacity-25
                  transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-blue-300 focus:ring-opacity-50
                  hover:focus:ring-red-300">
                  <svg class="w-4 h-4 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <span class="transition-all duration-300 group-hover:text-white">Remove</span>
                </button>
              </form>
            </div>

            <!-- Extra thumbnails if more than one photo -->
            <% if (home.photos && Array.isArray(home.photos) && home.photos.length > 1) { %>
              <div class="pt-4 border-t border-gray-100">
                <p class="text-xs text-gray-500 mb-2 font-medium uppercase tracking-wider">Gallery</p>
                <div class="flex gap-2 mt-3 justify-center overflow-x-auto pb-2">
                  <% home.photos.slice(1, 4).forEach(photo => { %>
                    <div class="relative flex-shrink-0 group/thumb">
                      <img src="/uploads/<%= photo %>"  
                           alt="Home Thumbnail" 
                           class="w-12 h-12 object-cover rounded-lg border-2 border-gray-200 
                                  transition-all duration-300 hover:border-rose-400 hover:scale-110 
                                  hover:shadow-md cursor-pointer" />
                      <div class="absolute inset-0 bg-gradient-to-t from-black from-opacity-0 to-transparent opacity-0 hover:opacity-20 rounded-lg transition-all duration-300"></div>
                    </div>
                  <% }); %>
                  
                  <% if (home.photos.length > 4) { %>
                    <div class="w-12 h-12 bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 rounded-lg border-2 border-gray-200 
                               flex items-center justify-center text-gray-600 text-xs font-bold flex-shrink-0
                               hover:from-rose-100 hover:to-rose-200 hover:border-rose-300 hover:text-rose-600
                               transition-all duration-300 cursor-pointer hover:scale-110">
                      +<%= home.photos.length - 3 %>
                    </div>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <!-- Empty State -->
    <div class="text-center py-20">
      <div class="max-w-md mx-auto">
        <div class="w-32 h-32 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">No Favourites Yet</h3>
        <p class="text-gray-600 mb-8 leading-relaxed">Start exploring amazing homes and add them to your favourites to see them here.</p>
        <a href="/homes" class="
          inline-flex items-center gap-2 px-8 py-4 rounded-full font-bold shadow-lg 
          bg-gradient-to-r from-[#ff385c] to-rose-600 text-white 
          hover:from-rose-600 hover:to-red-600 hover:shadow-xl 
          transition-all duration-300 transform hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Explore Homes
        </a>
      </div>
    </div>
  <% } %>
</section>

<!-- Add this CSS (tailwind utility) -->
<style>
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<!-- Footer -->
<%- include('../partials/footer') %>
</body>
</html>