<%- include('../partials/head') %>
</head>
    
<body class="bg-gradient-to-br from-gray-50 via-white to-slate-50 text-[#222] leading-relaxed min-h-screen">
  <!-- Header -->
  <%- include('../partials/headerNav') %>
  
  <!-- Page Title with decorative elements -->
  <div class="relative py-12 bg-gradient-to-r from-slate-50 to-gray-100 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0">
      <div class="absolute top-4 left-10 w-20 h-20 bg-gradient-to-br from-pink-200 to-purple-200 rounded-full opacity-30 blur-xl"></div>
      <div class="absolute bottom-4 right-10 w-32 h-32 bg-gradient-to-br from-blue-200 to-indigo-200 rounded-full opacity-30 blur-2xl"></div>
    </div>
    
    <h1 class="text-4xl md:text-5xl font-extrabold mb-8 flex flex-col items-center justify-center text-[#f855d2] tracking-tight relative z-10">
      <span class="flex items-center gap-4 text-center">
        <svg class="w-8 h-8 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        Detail of <u class=" decoration-pink-400"><%= home.houseName %></u>
      </span>
      <div class="w-24 h-1 bg-gradient-to-r from-pink-400 to-purple-500 rounded-full mt-4"></div>
    </h1>
  </div>

  <main class="max-w-6xl mx-auto mt-12 mb-16 bg-white rounded-3xl shadow-2xl p-8 md:p-12 mx-4 border border-gray-100 relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-rose-50 to-pink-50 rounded-full opacity-50 blur-2xl"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-full opacity-50 blur-xl"></div>
    
    <div class="flex flex-col lg:flex-row gap-12 relative z-10">
      <!-- Home Images Section -->
      <div class="lg:w-1/2 flex flex-col items-center space-y-6">
        <% if (home.photos && home.photos.length) { %>
          <div class="relative group w-full">
            <img src="/uploads/<%= Array.isArray(home.photos) ? home.photos[0] : home.photos %>" 
                 alt="Home Cover" 
                 class="w-full h-80 md:h-96 object-cover rounded-3xl shadow-2xl border-4 border-white 
                        transition-transform duration-500 group-hover:scale-105" />
            <!-- Image overlay with gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-black from-opacity-0 via-transparent to-black to-opacity-0 opacity-0 group-hover:opacity-20 rounded-3xl transition-opacity duration-500"></div>
            
            <!-- Photo counter badge -->
            <% if (Array.isArray(home.photos) && home.photos.length > 1) { %>
              <div class="absolute bottom-4 right-4 bg-white bg-opacity-90 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <span class="text-sm font-semibold text-gray-700"><%= home.photos.length %> Photos</span>
                </div>
              </div>
            <% } %>
          </div>

          <!-- Thumbnail Gallery -->
          <% if (Array.isArray(home.photos) && home.photos.length > 1) { %>
            <div class="w-full">
              <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                Photo Gallery
              </h3>
              <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-4">
                <% home.photos.slice(1).forEach(photo => { %>
                  <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-all duration-300">
                    <img src="/uploads/<%= photo %>" 
                         alt="Home Thumbnail" 
                         class="w-full h-20 object-cover transition-transform duration-300 group-hover:scale-110 cursor-pointer" />
                    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
                  </div>
                <% }); %>
              </div>
            </div>
          <% } %>
        <% } else { %>
          <div class="w-full h-80 md:h-96 bg-gradient-to-br from-gray-200 via-gray-300 to-gray-400 flex flex-col items-center justify-center text-gray-500 rounded-3xl shadow-xl border-4 border-white">
            <svg class="w-16 h-16 mb-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="text-lg font-medium">No Images Available</span>
          </div>
        <% } %>
      </div>

      <!-- Home Details Section -->
      <div class="lg:w-1/2 flex flex-col justify-center space-y-6">
        <!-- Title -->
        <div class="border-b border-gray-100 pb-6">
          <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-[#ff385c] tracking-tight leading-tight">
            <%= home.houseName %>
          </h1>
          <div class="flex items-center gap-2">
            <div class="flex">
              <% for(let i = 0; i < 5; i++) { %>
                <% if(i < Math.floor(home.rating)) { %>
                  <span class="text-yellow-400 text-xl">⭐</span>
                <% } else { %>
                  <span class="text-gray-300 text-xl">⭐</span>
                <% } %>
              <% } %>
            </div>
            <span class="text-lg font-bold text-gray-700"><%= home.rating %></span>
            <span class="text-gray-500">• Exceptional</span>
          </div>
        </div>

        <!-- Location & Contact Info -->
        <div class="space-y-4">
          <div class="flex items-center gap-4 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl border border-blue-100">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800">Location</h3>
              <p class="text-lg text-gray-700"><%= home.homeLocation %></p>
            </div>
          </div>

          <div class="flex items-center gap-4 p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl border border-green-100">
            <div class="flex-shrink-0 w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800">Contact Information</h3>
              <p class="text-lg text-gray-700"><%= home.contactInfo %></p>
            </div>
          </div>
        </div>

        <!-- Price Section -->
        <div class="bg-gradient-to-r from-emerald-50 via-green-50 to-emerald-50 p-6 rounded-2xl border-2 border-emerald-200 shadow-lg">
          <div class="text-center">
            <h3 class="text-lg text-gray-700 font-medium mb-2">Price per night</h3>
            <div class="flex items-center justify-center gap-2">
              <span class="text-4xl md:text-5xl font-bold text-emerald-600 tracking-tight">₹<%= home.pricePerNight %></span>
              <div class="text-emerald-600">
                <div class="text-sm font-medium">per</div>
                <div class="text-sm font-medium">night</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row items-center gap-4 pt-6">
          <!-- Favourite Button -->
          <div class="w-full sm:w-auto">
            <%- include('../partials/favourite') %>
          </div>

          <!-- Book Now Button -->
          <a href="#" class="
            group w-full sm:flex-1 inline-flex items-center justify-center gap-3 
            bg-gradient-to-r from-[#ff385c] to-rose-600 text-white 
            px-8 py-4 rounded-full font-bold shadow-xl 
            hover:from-rose-600 hover:to-red-600 hover:shadow-2xl hover:shadow-rose-500 hover:shadow-opacity-25
            transition-all duration-300 transform hover:scale-105 active:scale-95
            focus:outline-none focus:ring-4 focus:ring-rose-300 focus:ring-opacity-50 text-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>Book Now</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Additional Info Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-6 border-t border-gray-100">
          <div class="bg-gray-50 p-4 rounded-xl text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <h4 class="font-semibold text-gray-800">Secure Booking</h4>
            <p class="text-sm text-gray-600">Safe & Protected</p>
          </div>
          <div class="bg-gray-50 p-4 rounded-xl text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h4 class="font-semibold text-gray-800">Verified Host</h4>
            <p class="text-sm text-gray-600">Trusted Property</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center py-12 bg-gradient-to-r from-slate-50 via-white to-gray-50 border-t border-gray-200 relative overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-1/4 w-80 h-80 bg-gradient-to-br from-rose-100 to-blue-100 rounded-full opacity-30 blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full opacity-30 blur-3xl"></div>
    </div>
    
    <div class="relative z-10">
      <p class="text-gray-700 text-lg font-medium mb-4">© 2025 Airbnb Clone | Made with ❤️</p>
      <div class="flex justify-center gap-3">
        <div class="w-8 h-1 bg-gradient-to-r from-[#ff7a7a] to-[#ff385c] rounded-full"></div>
        <div class="w-8 h-1 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full"></div>
        <div class="w-8 h-1 bg-gradient-to-r from-emerald-500 to-green-500 rounded-full"></div>
      </div>
    </div>
  </footer>
</body>
</html>