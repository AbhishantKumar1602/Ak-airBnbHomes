<%- include('../partials/head') %>
</head>
    
<body class="bg-gradient-to-br from-gray-50 via-white to-slate-50 text-[#222] leading-relaxed min-h-screen">
  <!-- Header -->
  <%- include('../partials/headerNav') %>

  <!-- Hero -->
  <main class="text-center py-12 px-6 bg-gradient-to-br from-[#ff7a7a] via-[#ff385c] to-rose-600 text-white rounded-b-3xl shadow-2xl relative overflow-hidden">
    <!-- Decorative elements using Tailwind -->
    <div class="absolute inset-0">
      <div class="absolute top-6 left-10 w-24 h-24 bg-white bg-opacity-10 rounded-full blur-xl animate-pulse"></div>
      <div class="absolute bottom-6 right-10 w-32 h-32 bg-white bg-opacity-5 rounded-full blur-2xl"></div>
      <div class="absolute top-1/2 left-1/4 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16 bg-white bg-opacity-5 rounded-full blur-lg"></div>
    </div>
    
    <div class="relative z-10">
      
      <p class="text-xl md:text-2xl font-light opacity-95 max-w-2xl mx-auto leading-relaxed">Find unique stays and experiences around the world</p>
    </div>
  </main>

<!-- Homes Grid Section -->
<section class="mt-20 px-6 md:px-12 max-w-7xl mx-auto">
  <div class="mb-12">
    <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 tracking-tight bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">Available Homes</h2>
    <div class="w-20 h-1 bg-gradient-to-r from-[#ff7a7a] to-[#ff385c] rounded-full"></div>
  </div>

  <!-- Grid container -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
  <% (homesData || []).forEach(home => { %>
      <div class="group bg-white rounded-3xl shadow-lg overflow-hidden 
                  transition-all duration-500 ease-out hover:shadow-2xl hover:shadow-rose-500 hover:shadow-opacity-10
                  border border-gray-100 hover:border-rose-200 relative transform hover:-translate-y-3 hover:scale-105">

        <!-- Cover Image (First photo) -->
        <div class="relative overflow-hidden rounded-t-3xl">
          <% if (home.photos && home.photos.length) { %>
            <img src="/uploads/<%= Array.isArray(home.photos) ? home.photos[0] : home.photos %>" 
                alt="Home Cover" 
                class="w-full h-56 object-cover transition-transform duration-700 ease-out group-hover:scale-110" />
          <% } else { %>
            <!-- fallback placeholder -->
            <div class="w-full h-56 bg-gradient-to-br from-gray-200 via-gray-300 to-gray-400 flex flex-col items-center justify-center text-gray-500 relative">
              <svg class="w-12 h-12 mb-2 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="text-sm font-medium">No Image</span>
            </div>
          <% } %>
          
          <!-- Floating rating badge -->
          <div class="absolute top-4 right-4 bg-white bg-opacity-95 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg border border-white border-opacity-50">
            <div class="flex items-center gap-1">
              <span class="text-sm font-bold text-gray-800"><%= home.rating %></span>
              <span class="text-yellow-500">⭐</span>
            </div>
          </div>
        </div>

        <!-- Card Content -->
        <div class="p-6 space-y-4">
          <h3 class="font-semibold text-gray-900 text-lg mb-1 truncate group-hover:text-rose-600 transition-colors duration-300"><%= home.houseName %></h3>
          
          <div class="space-y-2">
            <div class="flex items-center gap-2 text-gray-600 bg-gray-50 p-2 rounded-lg">
              <svg class="w-4 h-4 flex-shrink-0 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-sm truncate font-medium"><%= home.homeLocation %></p>
            </div>
            
            <div class="flex items-center gap-2 text-gray-500 bg-blue-50 p-2 rounded-lg">
              <svg class="w-4 h-4 flex-shrink-0 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <p class="text-sm truncate font-medium"><%= home.contactInfo %></p>
            </div>
          </div>

          <!-- Price highlight -->
          <div class="bg-gradient-to-r from-emerald-50 via-green-50 to-emerald-50 p-4 rounded-xl border border-emerald-100 shadow-sm">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600 font-medium">Price per night:</span>
              <div class="text-right">
                <span class="text-2xl font-bold text-emerald-600">₹<%= home.pricePerNight %></span>
              </div>
            </div>
          </div>

          <!-- Book Now and Detail Buttons -->
          <div class="mt-4 text-center gap-4">
            <a href="/homes/<%= home._id %>" class="
              group inline-flex items-center justify-center gap-2 px-10 py-3 rounded-full font-bold shadow-lg 
              transition-all duration-300 text-lg mt-4 w-full
              bg-gradient-to-r from-blue-600 to-blue-700 text-white 
              hover:from-blue-700 hover:to-blue-800 hover:shadow-xl hover:shadow-blue-500 hover:shadow-opacity-25
              transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-blue-300 focus:ring-opacity-50">
              <span>View Home</span>
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Extra thumbnails if more than one photo -->
          <% if (home.photos && Array.isArray(home.photos) && home.photos.length > 1) { %>
            <div class="pt-4 border-t border-gray-100">
              <p class="text-xs text-gray-500 mb-2 font-medium uppercase tracking-wider">Gallery</p>
              <div class="flex gap-2 mt-3 justify-center overflow-x-auto pb-2">
                <% home.photos.slice(1, 4).forEach(photo => { %>
                  <div class="relative flex-shrink-0 group/thumb">
                    <img src="/uploads/<%= photo %>"  
                         alt="Home Thumbnail" 
                         class="w-12 h-12 object-cover rounded-lg border-2 border-gray-200 
                                transition-all duration-300 hover:border-rose-400 hover:scale-110 
                                hover:shadow-md cursor-pointer" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black from-opacity-0 to-transparent opacity-0 hover:opacity-20 rounded-lg transition-all duration-300"></div>
                  </div>
                <% }); %>
                
                <% if (home.photos.length > 4) { %>
                  <div class="w-12 h-12 bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 rounded-lg border-2 border-gray-200 
                             flex items-center justify-center text-gray-600 text-xs font-bold flex-shrink-0
                             hover:from-rose-100 hover:to-rose-200 hover:border-rose-300 hover:text-rose-600
                             transition-all duration-300 cursor-pointer hover:scale-110">
                    +<%= home.photos.length - 3 %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</section>

<!-- Add this CSS (tailwind utility) -->
<style>
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
</style>

<!-- Footer -->
<%- include('../partials/footer') %>
</body>
</html>