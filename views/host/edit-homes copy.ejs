<%- include('../partials/head') %>
    </head>
    
    <body class="bg-[#fafafa] text-[#222] leading-relaxed">
        <%- include('../partials/headerNav') %>

        <main class=" bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center justify-center">
            <div class="mb-8 mt-8">
                <h1  class="text-3xl font-bold text-blue-600 text-center">
                    <% if (action === true) { %>
                        Edit - <u><%- home.houseName %></u> on Airbnb
                    <% } else { %>
                        Register Your Home on Airbnb
                    <% } %>
                </h1>
            </div>

            <form action="/host/<%= action === true ? 'edit-homes/' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="space-y-4">
                <!-- just for edit -->
                <input type="hidden" id="id" name="id" value="<%= action === true ? home._id : '' %>" />
                <!-- ..... -->

                <!-- House Name -->
                <div>
                    <label for="houseName" class="block text-sm font-medium text-gray-700 mb-1">
                        House Name
                    </label>
                    <input type="text" id="houseName" name="houseName"
                    value="<%= action === true ? home.houseName : '' %>"
                    placeholder="Enter the name of your house"
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    required />
                </div>
                
                <!-- Home Location -->
                <div>
                    <label for="homeLocation" class="block text-sm font-medium text-gray-700 mb-1">
                        Home Location
                    </label>
                    <input type="text" id="homeLocation" name="homeLocation"
                    value="<%= action === true ? home.homeLocation : '' %>"
                    placeholder="Enter location (City, State, Country)"
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-green-500 focus:outline-none"
                    required />
                </div>
                <!-- Contact Information -->
                <div>
                    <label for="contactInfo" class="block text-sm font-medium text-gray-700 mb-1">
                        Contact Information
                    </label>
                    <input type="tel" id="contactInfo" name="contactInfo"
                    value="<%= action === true ? home.contactInfo : '' %>"
                    placeholder="Enter phone number or email"
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                    required />
                </div>
                <!-- Price Per Night -->
                <div>
                    <label for="pricePerNight" class="block text-sm font-medium text-gray-700 mb-1">
                        Price Per Night
                    </label>
                    <input type="number" id="pricePerNight" name="pricePerNight"
                    value="<%= action === true ? home.pricePerNight : '' %>"
                    placeholder="Enter price per night"
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-yellow-500 focus:outline-none"
                    min="0" step="0.01" required />
                </div>
                <!-- Rating -->
                <div>
                    <label for="rating" class="block text-sm font-medium text-gray-700 mb-1">
                        Rating
                    </label>
                    <input type="number" id="rating" name="rating"
                    value="<%= action === true ? home.rating : '' %>"
                    placeholder="Enter rating (1-5)"
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                    min="1" max="5" step="0.1" required />
                </div>
                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                            Description
                        </label>
                        <textarea id="description" name="description"
                        placeholder="Enter a description of your home"
                        class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                        rows="4" required><%= action === true ? home.description : '' %></textarea>
                    </div>
                <!-- Photos (Images) -->
                <div>
                    <label for="photos" class="block text-sm font-medium text-gray-700 mb-1">
                        Photos (Images)
                    </label>
                    <input type="file" id="photos" name="photos"
                    value="<%= action === true ? home.photos : '' %>"
                    accept="image/*" multiple
                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-pink-500 focus:outline-none" />
                </div>
                <!-- Submit Button -->
                <div class="flex justify-end">
                    <input type="submit" value="<%= action === true ? 'Update Home' : 'Add Home' %>" class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition"
                    />
                </div>
            </form>
        </main>
    </body>

</html>