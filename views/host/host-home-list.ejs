<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-slate-50 via-gray-50 to-blue-50 min-h-screen">
  <%- include('../partials/headerNav') %>
  
  <!-- Enhanced Hero Section -->
  <main class="relative overflow-hidden">
    <div class="relative bg-gradient-to-r from-pink-500 via-red-500 to-pink-600 text-white">
      <!-- Decorative Elements -->
      <div class="absolute inset-0 bg-gradient-to-r from-pink-600/20 via-red-600/20 to-pink-600/20"></div>
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      
      <div class="relative z-10 text-center py-16 px-6 max-w-4xl mx-auto">
        <!-- Host Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-lg rounded-2xl shadow-lg mb-8">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-5xl md:text-6xl font-bold mb-4 leading-tight">
          Your Properties
        </h1>
        <p class="text-xl md:text-2xl text-white/90 font-medium mb-6">
          Manage and showcase your amazing spaces
        </p>
        
        <!-- Stats Row -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 max-w-2xl mx-auto">
          <div class="bg-white/20 backdrop-blur-lg rounded-2xl p-6 text-center">
            <div class="text-3xl font-bold mb-2"><%= (homesData || []).length %></div>
            <div class="text-white/80">Active Listings</div>
          </div>
          <div class="bg-white/20 backdrop-blur-lg rounded-2xl p-6 text-center">
            <div class="text-3xl font-bold mb-2">
              ⭐ <%= homesData && homesData.length ? (homesData.reduce((sum, home) => sum + parseFloat(home.rating || 0), 0) / homesData.length).toFixed(1) : '0.0' %>
            </div>
            <div class="text-white/80">Avg Rating</div>
          </div>
          <div class="bg-white/20 backdrop-blur-lg rounded-2xl p-6 text-center">
            <div class="text-3xl font-bold mb-2">
              ₹<%= homesData && homesData.length ? Math.min(...homesData.map(home => parseFloat(home.pricePerNight || 0))) : '0' %>+
            </div>
            <div class="text-white/80">Starting From</div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Enhanced Homes Grid Section -->
  <section class="py-16 px-6 md:px-12 max-w-7xl mx-auto relative">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4 bg-gradient-to-r from-gray-900 via-gray-700 to-gray-900 bg-clip-text text-transparent">
        Your Listings
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-pink-500 to-red-500 rounded-full mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Manage your properties with ease. Edit details, update photos, or remove listings as needed.
      </p>
    </div>

    <!-- Grid container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      <% (homesData || []).forEach((home, index) => { %>
        <div class="group bg-white/80 backdrop-blur-xl rounded-3xl shadow-lg border border-white/20 overflow-hidden
                    transition-all duration-500 hover:shadow-2xl hover:shadow-pink-500/10 hover:-translate-y-2 hover:scale-[1.02]
                    relative">
          
          <!-- Image Container -->
          <div class="relative overflow-hidden">
            <% if (home.photos && home.photos.length) { %>
              <img src="/uploads/<%= Array.isArray(home.photos) ? home.photos[0] : home.photos %>"
                   alt="<%= home.houseName %>"
                   class="w-full h-56 object-cover transition-transform duration-700 group-hover:scale-110" />
            <% } else { %>
              <div class="w-full h-56 bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center relative">
                <div class="text-center">
                  <svg class="w-16 h-16 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <p class="text-gray-500 font-medium">No Image</p>
                </div>
              </div>
            <% } %>
            
            <!-- Overlay Badge -->
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1 text-sm font-semibold text-gray-800 shadow-lg">
              #<%= index + 1 %>
            </div>
            
            <!-- Rating Badge -->
            <div class="absolute top-4 right-4 bg-yellow-400/90 backdrop-blur-sm rounded-full px-3 py-1 text-sm font-bold text-gray-800 shadow-lg flex items-center space-x-1">
              <span><%= home.rating %></span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
          </div>

          <!-- Card Content -->
          <div class="p-6 space-y-4">
            <!-- Title and Location -->
            <div class="space-y-2">
              <h3 class="font-bold text-gray-900 text-xl mb-1 line-clamp-2 leading-tight group-hover:text-pink-600 transition-colors">
                <%= home.houseName %>
              </h3>
              <div class="flex items-center space-x-2 text-gray-600">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-sm truncate"><%= home.homeLocation %></p>
              </div>
              <div class="flex items-center space-x-2 text-gray-600">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <p class="text-sm truncate"><%= home.contactInfo %></p>
              </div>
            </div>

            <!-- Price -->
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-4 border border-green-200/50">
              <div class="text-center">
                <div class="text-2xl font-bold text-green-700">₹<%= home.pricePerNight %></div>
                <div class="text-sm text-green-600 font-medium">per night</div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-3 pt-2">
              <a href="/host/edit-homes/<%= home._id %>?action=edit" 
                 class="flex-1 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 
                        text-white text-center py-3 px-4 rounded-xl font-semibold shadow-lg 
                        hover:shadow-xl hover:shadow-blue-500/25 transform hover:-translate-y-0.5 
                        transition-all duration-300 flex items-center justify-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                <span>Edit</span>
              </a>
              
              <form action="/host/delete-home/<%= home._id %>" method="POST" class="flex-1">
                <button type="submit" 
                        onclick="return confirm('Are you sure you want to delete this listing?')"
                        class="w-full bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 
                               text-white py-3 px-4 rounded-xl font-semibold shadow-lg 
                               hover:shadow-xl hover:shadow-red-500/25 transform hover:-translate-y-0.5 
                               transition-all duration-300 flex items-center justify-center space-x-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  <span>Delete</span>
                </button>
              </form>
            </div>

            <!-- Additional Photos Thumbnails -->
            <% if (home.photos && Array.isArray(home.photos) && home.photos.length > 1) { %>
              <div class="pt-4 border-t border-gray-200/50">
                <div class="flex items-center space-x-2 mb-2">
                  <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="text-sm text-gray-600 font-medium">More Photos (<%= home.photos.length - 1 %>)</span>
                </div>
                <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-2">
                  <% home.photos.slice(1).forEach(photo => { %>
                    <img src="/uploads/<%= photo %>"  
                         alt="<%= home.houseName %> thumbnail"
                         class="w-16 h-16 object-cover rounded-xl border-2 border-gray-200 flex-shrink-0 hover:border-pink-300 transition-colors cursor-pointer shadow-sm hover:shadow-md" />
                  <% }); %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% }); %>

      <!-- Add New Home Card -->
      <div class="group bg-gradient-to-br from-pink-50 to-red-50 border-2 border-dashed border-pink-300 rounded-3xl 
                  transition-all duration-500 hover:border-pink-400 hover:shadow-lg hover:shadow-pink-500/10 hover:-translate-y-2
                  min-h-[400px] flex items-center justify-center">
        <a href="/host/add-home" class="text-center p-8 w-full h-full flex flex-col items-center justify-center space-y-6">
          <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-red-500 rounded-2xl flex items-center justify-center 
                      shadow-lg group-hover:shadow-xl group-hover:shadow-pink-500/25 transform group-hover:scale-110 transition-all duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Add New Home</h3>
            <p class="text-gray-600">List another property and increase your earnings</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Empty State -->
    <% if (!homesData || homesData.length === 0) { %>
      <div class="text-center py-20">
        <div class="w-32 h-32 bg-gradient-to-br from-gray-200 to-gray-300 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-gray-800 mb-4">No listings yet</h3>
        <p class="text-xl text-gray-600 mb-8 max-w-lg mx-auto">Start your hosting journey by adding your first property</p>
        <a href="/host/add-home" 
           class="inline-flex items-center space-x-2 bg-gradient-to-r from-pink-500 to-red-500 hover:from-pink-600 hover:to-red-600 
                  text-white px-8 py-4 rounded-full font-bold text-lg shadow-lg hover:shadow-xl hover:shadow-pink-500/25 
                  transform hover:-translate-y-1 transition-all duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span>Add Your First Home</span>
        </a>
      </div>
    <% } %>
  </section>

  <!-- Enhanced Footer -->
  <footer class="bg-white/80 backdrop-blur-xl border-t border-gray-200/50 mt-20">
    <div class="max-w-7xl mx-auto px-6 py-12 text-center">
      <div class="flex items-center justify-center space-x-2 mb-4">
        <div class="w-8 h-8 bg-gradient-to-br from-pink-500 to-red-500 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
          </svg>
        </div>
        <span class="text-xl font-bold text-gray-800">Airbnb Clone</span>
      </div>
      <p class="text-gray-600 mb-6">© 2025 Airbnb Clone | Made with ❤️</p>
      <div class="flex items-center justify-center space-x-6 text-sm text-gray-500">
        <span>Terms of Service</span>
        <span>•</span>
        <span>Privacy Policy</span>
        <span>•</span>
        <span>Support</span>
      </div>
    </div>
  </footer>

  <!-- Custom Styles -->
  <style>
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
    
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</body>
</html>