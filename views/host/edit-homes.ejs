<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-slate-50 via-gray-50 to-blue-50 min-h-screen">
    <%- include('../partials/headerNav') %>

    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Header Section -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-pink-500 to-red-500 rounded-2xl shadow-lg mb-6">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <% if (action === true) { %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    <% } else { %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    <% } %>
                </svg>
            </div>
            
            <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-gray-700 to-gray-900 bg-clip-text text-transparent mb-4">
                <% if (action === true) { %>
                    Edit Your Listing
                <% } else { %>
                    Share Your Space
                <% } %>
            </h1>
            
            <% if (action === true) { %>
            <p class="text-xl text-gray-600 mb-2">Update details for</p>
            <p class="text-2xl font-semibold text-pink-600 underline decoration-2 decoration-pink-200"><%- home.houseName %></p>
            <% } else { %>
            <p class="text-xl text-gray-600">List your home on Airbnb and start earning</p>
            <% } %>
            
            <div class="w-24 h-1 bg-gradient-to-r from-pink-500 to-red-500 rounded-full mx-auto mt-6"></div>
        </div>

        <!-- Main Form Container -->
        <div class="bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 relative overflow-hidden">
            
            <!-- Decorative Elements -->
            <div class="absolute inset-0 bg-gradient-to-r from-pink-500/3 via-red-500/3 to-orange-500/3"></div>
            <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-pink-400/10 to-red-400/10 rounded-full blur-2xl"></div>
            <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-gradient-to-tr from-red-400/10 to-pink-400/10 rounded-full blur-2xl"></div>

            <form action="/host/<%= action === true ? 'edit-homes/' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="relative z-10 p-8 lg:p-12">
                
                <!-- Hidden ID field for edit -->
                <input type="hidden" id="id" name="id" value="<%= action === true ? home._id : '' %>" />

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    
                    <!-- Left Column -->
                    <div class="space-y-6">
                        
                        <!-- House Name -->
                        <div class="group">
                            <label for="houseName" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                    </svg>
                                    <span>House Name</span>
                                </span>
                            </label>
                            <input type="text" id="houseName" name="houseName" value="<%= action === true ? home.houseName : '' %>" placeholder="Enter the name of your house" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white hover:border-gray-300 hover:bg-gray-50 px-4 py-3 transition-all duration-300 ease-in-out transform hover:-translate-y-0.5 text-gray-900 font-medium" required />
                        </div>

                        <!-- Home Location -->
                        <div class="group">
                            <label for="homeLocation" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>Home Location</span>
                                </span>
                            </label>
                            <input type="text" id="homeLocation" name="homeLocation" value="<%= action === true ? home.homeLocation : '' %>" placeholder="Enter location (City, State, Country)" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-green-500 focus:outline-none bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-green-500/20 focus:border-green-500 focus:bg-white hover:border-gray-300 hover:bg-gray-50 px-4 py-3 transition-all duration-300 ease-in-out transform hover:-translate-y-0.5 text-gray-900 font-medium" required />
                        </div>

                        <!-- Contact Information -->
                        <div class="group">
                            <label for="contactInfo" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    <span>Contact Information</span>
                                </span>
                            </label>
                            <input type="tel" id="contactInfo" name="contactInfo" value="<%= action === true ? home.contactInfo : '' %>" placeholder="Enter phone number or email" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:outline-none bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-purple-500/20 focus:border-purple-500 focus:bg-white hover:border-gray-300 hover:bg-gray-50 px-4 py-3 transition-all duration-300 ease-in-out transform hover:-translate-y-0.5 text-gray-900 font-medium" required />
                        </div>

                        <!-- Price and Rating Row -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            
                            <!-- Price Per Night -->
                            <div class="group">
                                <label for="pricePerNight" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                    <span class="flex items-center space-x-2">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                                        </svg>
                                        <span>Price Per Night</span>
                                    </span>
                                </label>
                                <input type="number" id="pricePerNight" name="pricePerNight" value="<%= action === true ? home.pricePerNight : '' %>" placeholder="Enter price per night" class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-yellow-500 focus:outline-none bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-yellow-500/20 focus:border-yellow-500 focus:bg-white hover:border-gray-300 hover:bg-gray-50 px-4 py-3 transition-all duration-300 ease-in-out transform hover:-translate-y-0.5 text-gray-900 font-medium"
                                    min="0" step="0.01" required />
                            </div>

                            <!-- Rating -->
                            <div class="group">
                                <label for="rating" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                    <span class="flex items-center space-x-2">
                                        <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                                        </svg>
                                        <span>Rating</span>
                                    </span>
                                </label>
                                <input 
                                    type="number" 
                                    id="rating" 
                                    name="rating"
                                    value="<%= action === true ? home.rating : '' %>"
                                    placeholder="Enter rating (1-5)"
                                    class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none
                                           bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                           focus:outline-none focus:ring-4 focus:ring-indigo-500/20 focus:border-indigo-500 focus:bg-white
                                           hover:border-gray-300 hover:bg-gray-50 px-4 py-3
                                           transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                           text-gray-900 font-medium"
                                    min="1" max="5" step="0.1" required />
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-6">
                        
                        <!-- Description -->
                        <div class="group">
                            <label for="description" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
                                    </svg>
                                    <span>Description</span>
                                </span>
                            </label>
                            <textarea 
                                id="description" 
                                name="description"
                                placeholder="Describe your space, amenities, and what makes it special..."
                                class="w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none
                                       bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                       focus:outline-none focus:ring-4 focus:ring-indigo-500/20 focus:border-indigo-500 focus:bg-white
                                       hover:border-gray-300 hover:bg-gray-50 px-4 py-3
                                       transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                       text-gray-900 font-medium resize-none"
                                rows="6" required><%= action === true ? home.description : '' %></textarea>
                        </div>

                        <!-- Photos Upload -->
                        <div class="group">
                            <label for="photos" class="block text-sm font-semibold text-gray-700 mb-3 group-focus-within:text-pink-600 transition-colors duration-200">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-500 group-focus-within:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <span>Photos (Images)</span>
                                </span>
                            </label>
                            
                            <!-- Custom File Upload -->
                            <div class="relative">
                                <input 
                                    type="file" 
                                    id="photos" 
                                    name="photos"
                                    value="<%= action === true ? home.photos : '' %>"
                                    accept="image/*" 
                                    multiple
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" />
                                
                                <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 text-center bg-gray-50/50 hover:border-pink-400 hover:bg-pink-50/30 transition-all duration-300 transform hover:scale-[1.02] group-focus-within:border-pink-500 group-focus-within:bg-pink-50/50">
                                    <div class="space-y-4">
                                        <div class="flex justify-center">
                                            <div class="w-16 h-16 bg-gradient-to-br from-pink-100 to-red-100 rounded-2xl flex items-center justify-center">
                                                <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                                </svg>
                                            </div>
                                        </div>
                                        <div>
                                            <p class="text-lg font-semibold text-gray-700">Upload your photos</p>
                                            <p class="text-sm text-gray-500 mt-1">Drag and drop or click to browse</p>
                                            <p class="text-xs text-gray-400 mt-2">Supports: JPG, PNG, GIF (Multiple files)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="mt-12 flex justify-center">
                    <input 
                        type="submit" 
                        value="<%= action === true ? 'Update Home' : 'Add Home' %>" 
                        class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition
                               bg-gradient-to-r from-pink-500 via-red-500 to-pink-600 
                               hover:from-pink-600 hover:via-red-600 hover:to-pink-700
                               active:from-pink-700 active:via-red-700 active:to-pink-800
                               text-white font-bold text-lg rounded-xl shadow-lg 
                               hover:shadow-2xl hover:shadow-pink-500/25 px-12 py-4
                               focus:outline-none focus:ring-4 focus:ring-pink-500/50 focus:ring-offset-2
                               transform hover:-translate-y-1 hover:scale-[1.02] active:scale-[0.98]
                               transition-all duration-300 ease-out
                               border border-transparent relative overflow-hidden group cursor-pointer" />
                </div>
            </form>
        </div>

        <!-- Additional Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
            <div class="bg-white/60 backdrop-blur-lg rounded-2xl p-6 shadow-lg border border-white/20 text-center transform hover:scale-105 transition-all duration-300">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Easy Setup</h3>
                <p class="text-sm text-gray-600">Simple form to get your listing live quickly</p>
            </div>
            
            <div class="bg-white/60 backdrop-blur-lg rounded-2xl p-6 shadow-lg border border-white/20 text-center transform hover:scale-105 transition-all duration-300">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-teal-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Start Earning</h3>
                <p class="text-sm text-gray-600">Begin making money from your space today</p>
            </div>
            
            <div class="bg-white/60 backdrop-blur-lg rounded-2xl p-6 shadow-lg border border-white/20 text-center transform hover:scale-105 transition-all duration-300">
                <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Full Support</h3>
                <p class="text-sm text-gray-600">We're here to help you succeed as a host</p>
            </div>
        </div>
    </main>
</body>
</html>