<body class="bg-gradient-to-br from-slate-50 via-gray-50 to-blue-50 min-h-screen">
    <%- include('../partials/headerNav') %>

    <main class="flex justify-center items-center mt-10 mb-20 px-4">
        <div class="w-full max-w-lg">
            <!-- Main Signup Container -->
            <div class="bg-white/80 backdrop-blur-xl p-8 space-y-8 rounded-2xl shadow-2xl border border-white/20 relative overflow-hidden transform hover:scale-[1.01] transition-all duration-500">
                
                <!-- Decorative gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-r from-pink-500/5 via-red-500/5 to-orange-500/5 rounded-2xl"></div>
                <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-pink-400/20 to-red-400/20 rounded-full blur-2xl"></div>
                <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-gradient-to-tr from-red-400/20 to-pink-400/20 rounded-full blur-2xl"></div>
                
                <!-- Content -->
                <div class="relative z-10">
                    <!-- Title Section -->
                    <div class="text-center space-y-2 mb-8">
                        <h2 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-gray-700 to-gray-900 bg-clip-text text-transparent">
                            Join Us Today
                        </h2>
                        <p class="text-gray-600 text-sm">Create your account and get started</p>
                        <div class="w-16 h-1 bg-gradient-to-r from-pink-500 to-red-500 rounded-full mx-auto mt-4"></div>
                    </div>
                    
                    <!-- Error Messages -->
                    <div class="mb-6">
                        <div class="bg-red-50/80 border-l-4 border-red-400 p-4 rounded-r-lg backdrop-blur-sm">
                            <%- include('../partials/errors') %>
                        </div>
                    </div>
                    
                    <!-- Signup Form -->
                    <form action="/signup" method="POST" class="space-y-6">
                        
                        <!-- Name Fields Row -->
                        <div class="flex space-x-4">
                            <!-- First Name -->
                            <div class="w-1/2 group">
                                <label for="firstname" class="block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-pink-600 transition-colors duration-200">
                                    First Name
                                </label>
                                <div class="relative">
                                    <input 
                                        id="firstname" 
                                        name="firstname" 
                                        value =" <%= oldInput.firstname ? oldInput.firstname : '' %>" 
                                        type="text" 
                                        required
                                        class="w-full px-4 py-3 bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                               focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white
                                               hover:border-gray-300 hover:bg-gray-50
                                               transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                               text-gray-900 font-medium"
                                        placeholder="First name">
                                    
                                    <!-- User Icon -->
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400 group-focus-within:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Last Name -->
                            <div class="w-1/2 group">
                                <label for="lastname" class="block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-pink-600 transition-colors duration-200">
                                    Last Name
                                </label>
                                <div class="relative">
                                    <input 
                                        id="lastname" 
                                        name="lastname" 
                                        type="text" 
                                        value =" <%= oldInput.lastname ? oldInput.lastname : '' %>"
                                        class="w-full px-4 py-3 bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                               focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white
                                               hover:border-gray-300 hover:bg-gray-50
                                               transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                               text-gray-900 font-medium"
                                        placeholder="Last name">
                                </div>
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="group">
                            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-pink-600 transition-colors duration-200">
                                Email address
                            </label>
                            <div class="relative">
                                <input 
                                    id="email" 
                                    name="email" 
                                    type="email" 
                                    value =" <%= oldInput.email ? oldInput.email : '' %>" 
                                    autocomplete="email" 
                                    required
                                    class="w-full px-4 py-3 bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                           focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white
                                           hover:border-gray-300 hover:bg-gray-50
                                           transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                           text-gray-900 font-medium"
                                    placeholder="Enter your email">
                                
                                <!-- Email Icon -->
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400 group-focus-within:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Password Field -->
                        <div class="group">
                            <label for="password" class="block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-pink-600 transition-colors duration-200">
                                Password
                            </label>
                            <div class="relative">
                                <input 
                                    id="password" 
                                    name="password" 
                                    type="password" 
                                    autocomplete="new-password" 
                                    required
                                    class="w-full px-4 py-3 bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                           focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white
                                           hover:border-gray-300 hover:bg-gray-50
                                           transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                           text-gray-900 font-medium"
                                    placeholder="Create password">
                                
                                <!-- Lock Icon -->
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400 group-focus-within:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="group">
                            <label for="confirmPassword" class="block text-sm font-semibold text-gray-700 mb-2 group-focus-within:text-pink-600 transition-colors duration-200">
                                Confirm Password
                            </label>
                            <div class="relative">
                                <input 
                                    id="confirmPassword" 
                                    name="confirmPassword" 
                                    type="password"
                                    autocomplete="new-password" 
                                    required
                                    class="w-full px-4 py-3 bg-gray-50/50 border-2 border-gray-200 rounded-xl shadow-sm placeholder-gray-400 
                                           focus:outline-none focus:ring-4 focus:ring-pink-500/20 focus:border-pink-500 focus:bg-white
                                           hover:border-gray-300 hover:bg-gray-50
                                           transition-all duration-300 ease-in-out transform hover:-translate-y-0.5
                                           text-gray-900 font-medium"
                                    placeholder="Confirm password">
                                
                                <!-- Shield Check Icon -->
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400 group-focus-within:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- User Type Selection -->
                        <div class="space-y-3">
                            <label class="block text-sm font-semibold text-gray-700">User Type</label>
                            <div class="grid grid-cols-2 gap-4">
                                <!-- Guest Option -->
                                <label class="relative cursor-pointer group">
                                    <input type="radio" name="usertype" value="guest" checked="<%= oldInput.usertype === 'guest'%>" required class="sr-only peer">
                                    <div class="flex items-center justify-center p-4 bg-gray-50/50 border-2 border-gray-200 rounded-xl 
                                               peer-checked:bg-gradient-to-r peer-checked:from-pink-50 peer-checked:to-red-50
                                               peer-checked:border-pink-500 peer-checked:shadow-lg peer-checked:shadow-pink-500/20
                                               hover:border-gray-300 hover:bg-gray-100/50
                                               transition-all duration-300 transform hover:scale-105 peer-checked:scale-105">
                                        <div class="flex flex-col items-center space-y-2">
                                            <svg class="w-8 h-8 text-gray-400 peer-checked:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                            <span class="text-sm font-medium text-gray-700 peer-checked:text-pink-700">Guest</span>
                                        </div>
                                    </div>
                                </label>
                                
                                <!-- Host Option -->
                                <label class="relative cursor-pointer group">
                                    <input type="radio" name="usertype" value="host" required class="sr-only peer">
                                    <div class="flex items-center justify-center p-4 bg-gray-50/50 border-2 border-gray-200 rounded-xl 
                                               peer-checked:bg-gradient-to-r peer-checked:from-pink-50 peer-checked:to-red-50
                                               peer-checked:border-pink-500 peer-checked:shadow-lg peer-checked:shadow-pink-500/20
                                               hover:border-gray-300 hover:bg-gray-100/50
                                               transition-all duration-300 transform hover:scale-105 peer-checked:scale-105">
                                        <div class="flex flex-col items-center space-y-2">
                                            <svg class="w-8 h-8 text-gray-400 peer-checked:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                            <span class="text-sm font-medium text-gray-700 peer-checked:text-pink-700">Host</span>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="flex items-start space-x-3 p-4 bg-gray-50/50 rounded-xl border border-gray-200">
                            <input 
                                type="checkbox" 
                                name="terms" 
                                id="terms" 
                                required
                                class="mt-1 w-5 h-5 text-pink-600 bg-white border-2 border-gray-300 rounded 
                                       focus:ring-pink-500 focus:ring-2 focus:ring-offset-2 
                                       checked:bg-pink-600 checked:border-pink-600
                                       transition-all duration-200">
                            <label for="terms" class="text-sm text-gray-700 leading-relaxed">
                                I agree to the 
                                <a href="#" class="font-semibold text-pink-600 hover:text-pink-700 underline decoration-2 decoration-pink-200 hover:decoration-pink-300 transition-colors">
                                    Terms and Conditions
                                </a>
                                and acknowledge that I have read the Privacy Policy.
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-4">
                            <button 
                                type="submit"
                                class="w-full flex justify-center items-center py-4 px-6 
                                       bg-gradient-to-r from-pink-500 via-red-500 to-pink-600 
                                       hover:from-pink-600 hover:via-red-600 hover:to-pink-700
                                       active:from-pink-700 active:via-red-700 active:to-pink-800
                                       text-white font-bold text-lg rounded-xl shadow-lg 
                                       hover:shadow-2xl hover:shadow-pink-500/25
                                       focus:outline-none focus:ring-4 focus:ring-pink-500/50 focus:ring-offset-2
                                       transform hover:-translate-y-1 hover:scale-[1.02] active:scale-[0.98]
                                       transition-all duration-300 ease-out
                                       border border-transparent relative overflow-hidden group">
                                
                                <!-- Button shine effect -->
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent 
                                           transform -skew-x-12 -translate-x-full group-hover:translate-x-full 
                                           transition-transform duration-1000 ease-out"></div>
                                
                                <span class="relative z-10 flex items-center space-x-2">
                                    <span>Create Account</span>
                                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                    </svg>
                                </span>
                            </button>
                        </div>
                    </form>

                    <!-- Login Link -->
                    <div class="text-center pt-6 border-t border-gray-200/50">
                        <p class="text-gray-600 text-sm">
                            Already have an account? 
                            <a href="/login" 
                               class="font-semibold text-pink-600 hover:text-pink-700 
                                      relative inline-block transition-colors duration-200
                                      before:absolute before:bottom-0 before:left-0 before:w-0 before:h-0.5 
                                      before:bg-gradient-to-r before:from-pink-500 before:to-red-500 
                                      before:transition-all before:duration-300 hover:before:w-full
                                      transform hover:scale-105 active:scale-95">
                                Sign In
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Security Badge -->
            <div class="text-center mt-6">
                <div class="inline-flex items-center space-x-2 text-xs text-gray-500 bg-white/50 backdrop-blur-sm px-4 py-2 rounded-full border border-gray-200/50">
                    <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Your information is secure and encrypted</span>
                </div>
            </div>
        </div>
    </main>
</body>
</html>